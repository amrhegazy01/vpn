#Template client1.ovpn
client
dev tun
proto tcp-client
remote my-ip-mkt.com
port 1194
nobind
persist-key
persist-tun
tls-client
remote-cert-tls server
ca ca.crt
cert client1.crt
key client1.key
verb 4
mute 10
cipher AES-256-CBC
auth SHA1
auth-user-pass secret
auth-nocache
;redirect-gateway def1

route 10.0.0.0 255.255.255.0
route 172.15.10.0 255.255.255.0
